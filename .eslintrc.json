{
    "env": {
        "browser": true,
        "es6": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:json/recommended"
    ],
    "parser": "@babel/eslint-parser",
    "settings": {
        "react": {
            "version": "17"
        }
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "jest",
        "json",
        "react",
        "react-hooks"
    ],
    "rules": {
        "no-prototype-builtins": 0,
        "comma-dangle": ["error", "never"],
        "arrow-parens": ["error", "as-needed"]
    }
}
