{
    "env": {
        "browser": true,
        "es6": true,
        "jest/globals": true
    },
    "extends": [
        "eslint-config-airbnb",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:json/recommended"
    ],
    "parser": "@babel/eslint-parser",
    "settings": {
        "react": {
            "version": "17"
        }
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "jest",
        "json",
        "react",
        "react-hooks",
        "simple-import-sort"
    ],

    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "extends": [
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended"
            ],
            "parser": "@typescript-eslint/parser",
            "plugins": ["@typescript-eslint"]
        }
    ],
    "rules": {
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "comma-dangle": ["error", "never"],
        "no-trailing-spaces": ["error", { "ignoreComments": true }],
        "max-len": 0,
        "spaced-comment": ["error", "always", { "block": { "balanced": true } }],
        "no-case-declarations": 0,
        "no-underscore-dangle": 0,
        "radix": 0,
        "no-prototype-builtins": 0,
        "arrow-parens": ["error", "as-needed"],
        "arrow-body-style": 0,
        "no-void": 0,
        "no-continue": 0,
        "no-plusplus": 0,
        "no-restricted-syntax": 0,
        "class-methods-use-this": 0,
        "no-mixed-operators": 0, // Look at setting this and fixing resulting errors
        "import/no-dynamic-require": 0,
        "prefer-promise-reject-errors": 0,
        "operator-linebreak": ["error", "after"],
        "function-paren-newline": 0,
        "no-restricted-globals": 0,
        "default-param-last": 0,
        "consistent-return": 0,
        "import/prefer-default-export": 0,
        "no-unused-expressions": ["error", { "allowShortCircuit": true }],
        "no-async-promise-executor": 0, // Look at setting this and fixing resulting errors
        "max-classes-per-file": 0,
        "prefer-destructuring": 0, // Look at setting this and fixing resulting errors
        "no-self-assign": 0, // Look at setting this and fixing resulting errors
        "no-return-assign": ["error", "except-parens"],
        "no-param-reassign": 0,

        "import/no-cycle": 0, // Look at setting this and fixing resulting errors
        "import/no-import-module-exports": 0,
        "import/no-unresolved": 0,
        "import/extensions": 0,

        "react/jsx-indent": ["warn", 4],
        "react/jsx-indent-props": ["warn", 4],
        "react/forbid-prop-types": 0,

        "jsx-a11y/click-events-have-key-events": 0,
        "jsx-a11y/mouse-events-have-key-events": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "jsx-a11y/alt-text": 0,
        "jsx-a11y/no-noninteractive-element-interactions": 0,

        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error"
    }
}
