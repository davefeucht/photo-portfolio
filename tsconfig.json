{
    "compilerOptions": {
      "outDir": "./build/",
      "baseUrl": "./src",

      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictBindCallApply": true,
      "alwaysStrict": true,

      "noEmitOnError": true,
      "esModuleInterop": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "sourceMap": true,
      "moduleResolution": "node",

      "lib": [
        "DOM",
        "ESNext"
      ]
    }
  }